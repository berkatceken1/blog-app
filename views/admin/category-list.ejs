<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action=="edit") { %>
                    <div class="alert alert-success">
                        <%= categoryid %> id numaralı kategori güncellendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-danger">
                        Kategori silindi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-success">
                        Kategori eklendi.
                    </div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th>name</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td>#<%= category.categoryid %></td>
                                    <td><%= category.name %></td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.categoryid %>">edit</a>
                                        <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.categoryid %>">delete</a>
                                    </td>
                                </tr>
                             
                            <% }) %>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
        
    </div>

</body>
</html>